{
    // Set default indentation to 2 spaces for JavaScript and TypeScript files
    "[javascript]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },
    "[javascriptreact]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },
    "[typescript]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },
    "[typescriptreact]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },
    // Set default indentation to 4 spaces for Python files
    "[python]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.callArgumentNames": "all",
    "python.analysis.inlayHints.variableTypes": true,
    // Format files on save
    "editor.formatOnSave": true
}